{
	"compilerOptions": {
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitAny": true,
		"noImplicitReturns": true,		
        "noEmitOnError": true,
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
        "rootDir": "./ts",
		"outDir": "build/js",
		"lib": [ "es2016", "dom" ],
		"sourceMap": true
	},
	"exclude": [
	  "node_modules",
	  ".npm"
	],
	"include": [
		  "ts/**/*.ts"
	]
}