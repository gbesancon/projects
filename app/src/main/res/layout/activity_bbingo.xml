<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc" tools:context=".activity.BBingoActivity"
    android:id="@+id/main_layout">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/background_layout">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/background_view"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/bbingo_token" />

        <LinearLayout android:id="@+id/menu_layout" style="?metaButtonBarStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay" android:orientation="vertical"
            tools:ignore="UselessParent"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Button android:id="@+id/start_button" style="?metaButtonBarButtonStyle"
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:layout_weight="1" android:text="@string/start_button" />

            <Button
                style="?metaButtonBarButtonStyle"
                android:id="@+id/settings_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/settings_button" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
